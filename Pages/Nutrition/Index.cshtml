<p><a class="btn btn-primary" asp-page="Create">Create New</a><br></p>


<table class="container-fluid table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].ChartNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Q1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Q2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Q3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Q4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Q5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Q6)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nutrition[0].Result)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Nutrition)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChartNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Q6)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>
    @using (Html.BeginForm("Export", "Home", FormMethod.Post))
    {
        <input class="btn btn-primary" type="submit" id="btnSubmit" value="Export" />
    }
</p>