@page
@model OralHealthManagement.NutritionEditModel

@{
    ViewData["Title"] = "營養篩檢";
}

    <h1>營養篩檢</h1>

<hr />
<form method="post" id="CreateForm">
</form>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Nutrition.Id" />
            <div class="form-group">
                <label asp-for="Nutrition.Timestamp" class="control-label"></label>
                <input asp-for="Nutrition.Timestamp" class="form-control" />
                <span asp-validation-for="Nutrition.Timestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nutrition.ChartNo" class="control-label"></label>
                <input asp-for="Nutrition.ChartNo" class="form-control" />
                <span asp-validation-for="Nutrition.ChartNo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nutrition.Q1" class="control-label"></label>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q1" class="form-check-input" value="0" id="Q1_0">
                    <label class="form-check-label" for="Q1_0">
                        0分：嚴重食慾不佳
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q1" class="form-check-input" value="1" id="Q1_1">
                    <label class="form-check-label" for="Q1_1">
                        1分：中度食慾不佳
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q1" class="form-check-input" value="2" id="Q1_2">
                    <label class="form-check-label" for="Q1_2">
                        2分：食慾無變化
                    </label>
                </div>
                <span asp-validation-for="Nutrition.Q1" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nutrition.Q2" class="control-label"></label>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q2" class="form-check-input" value="0" id="Q2_0">
                    <label class="form-check-label" for="Q2_0">
                        0分：減少大於3公斤
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q2" class="form-check-input" value="1" id="Q2_1">
                    <label class="form-check-label" for="Q2_1">
                        1分：不知道
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q2" class="form-check-input" value="2" id="Q2_2">
                    <label class="form-check-label" for="Q2_2">
                        2分：減少1～3公斤
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q2" class="form-check-input" value="3" id="Q2_3">
                    <label class="form-check-label" for="Q2_3">
                        3分：體重無改變
                    </label>
                </div>
                <span asp-validation-for="Nutrition.Q2" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nutrition.Q3" class="control-label"></label>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q3" class="form-check-input" value="0" id="Q3_0">
                    <label class="form-check-label" for="Q3_0">
                        0分：臥床或輪椅
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q3" class="form-check-input" value="1" id="Q3_1">
                    <label class="form-check-label" for="Q3_1">
                        1分：可以下床活動或離開輪椅但無法自由活動
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q3" class="form-check-input" value="2" id="Q3_2">
                    <label class="form-check-label" for="Q3_2">
                        2分：可以自由活動
                    </label>
                </div>
                <span asp-validation-for="Nutrition.Q3" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nutrition.Q4" class="control-label"></label>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q4" class="form-check-input" value="0" id="Q4_0">
                    <label class="form-check-label" for="Q4_0">
                        0分：是
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q4" class="form-check-input" value="2" id="Q4_1">
                    <label class="form-check-label" for="Q4_1">
                        2分：否
                    </label>
                </div>
                <span asp-validation-for="Nutrition.Q4" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nutrition.Q5" class="control-label"></label>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q5" class="form-check-input" value="0" id="Q5_0">
                    <label class="form-check-label" for="Q5_0">
                        0分：嚴重痴呆或抑鬱
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q5" class="form-check-input" value="1" id="Q5_1">
                    <label class="form-check-label" for="Q5_1">
                        1分：輕度痴呆
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q5" class="form-check-input" value="2" id="Q5_2">
                    <label class="form-check-label" for="Q5_2">
                        2分：無精神問題
                    </label>
                </div>
                <span asp-validation-for="Nutrition.Q5" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Nutrition.Q6" class="control-label"></label>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q6" class="form-check-input" value="0" id="Q6_0">
                    <label class="form-check-label" for="Q6_0">
                        0分：BMI<19
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q6" class="form-check-input" value="1" id="Q6_1">
                    <label class="form-check-label" for="Q6_1">
                        1分：19<=BMI<21
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q6" class="form-check-input" value="2" id="Q6_2">
                    <label class="form-check-label" for="Q6_2">
                        2分：21<=BMI<23
                    </label>
                </div>
                <div class="form-check ">
                    <input type="radio" asp-for="Nutrition.Q6" class="form-check-input" value="3" id="Q6_3">
                    <label class="form-check-label" for="Q6_3">
                        3分：BMI>=23
                    </label>
                </div>
                <span asp-validation-for="Nutrition.Q6" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
