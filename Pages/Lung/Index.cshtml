@page
@model OralHealthManagement.LungIndexModel

@{
    ViewData["Title"] = "肺部感染指標";
}

<h1>肺部感染指標</h1>
<p><a class="btn btn-primary" asp-page="Create">Create New</a><br></p>

<table class="container-fluid table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].Timestamp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].ChartNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].Temp)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].WBC)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].SputumChar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].ThickSputum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].O2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].SputumCul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].Stain)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].LungInf)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Lung[0].Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Lung)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Timestamp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ChartNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Temp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.WBC)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SputumChar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ThickSputum)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.O2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SputumCul)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Stain)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LungInf)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<p>

    @using (Html.BeginForm("Export", "Home", FormMethod.Post))
    {
        <input class="btn btn-primary" type="submit" id="btnSubmit" value="Export" />
    }
</p>